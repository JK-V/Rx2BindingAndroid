<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Registration-->
    <style name="text_input_layout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/registration_text_hint_color</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/registration_text_hint_color</item>
        <item name="colorControlNormal">@color/registration_text_hint_color</item>
        <item name="colorControlActivated">@color/registration_text_hint_color</item>
        <item name="android:textColorHighlight">@color/registration_text_error_color</item>
        <item name="android:textColorLink">@color/registration_text_error_color</item>
    </style>

    <!--Footer button-->
    <style name="button_footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/footer_button_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/footer_button_margin_start_end</item>
        <item name="android:layout_marginStart">@dimen/footer_button_margin_start_end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
</resources>
